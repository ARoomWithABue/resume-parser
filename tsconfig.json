  
{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,

        "strict": true,
        "noImplicitAny": false,

        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "exclude": [
        "dist"
    ]
}